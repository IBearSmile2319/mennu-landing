---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="redirect app Mennu Comensal">
  <!-- mensaje de redireccionando -->
  <div class="flex justify-center items-center h-screen">
    <h1 class="text-2xl font-bold text-center">
      Redireccionando a la app de Mennu Comensal
    </h1>
  </div>
</Layout>

<!-- scrip de redirect comensal-->

<script>
  import {
    ANDROID_APP_URL_COMENSAL,
    IOS_APP_URL_COMENSAL,
  } from "@/consts/appStorePaths";

  const isIOS = navigator.userAgent.match(/iPhone|iPad|iPod|Macintosh/i);

  if (isIOS) {
    window.location.href = IOS_APP_URL_COMENSAL;
  } else {
    window.location.href = ANDROID_APP_URL_COMENSAL;
  }
</script>
