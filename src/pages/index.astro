---
import Banner from "@/components/Banner.astro";
import ButtonsAppsStore from "@/components/ButtonsAppsStore.astro";
import Typography from "@/components/ui/typography/Typography.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import Layout from "@/layouts/Layout.astro";
import { Image } from "astro:assets";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t("app.home.title")} description={t("app.home.description")}>
  <Banner
    title="Comida BARATA y BUENA cerca de ti"
    description="Come rico, come bien… menús económicos al alcance de tu bolsillo en lugares cercanos a donde te encuentres."
    textBtn="Descarga la APP"
    url="#"
    imgs={[
      {
        alt: "Comida BARATA y BUENA cerca de ti",
        width: 435,
        height: 544,
        src: "/src/assets/img/home-banner.webp",
      },
    ]}
  />
  <section class="flex lg:h-[706px] mb-8 lg:mb-0">
    <!-- container -->
    <div class="w-full mx-auto max-w-[1280px] flex flex-col gap-16 items-center">
      <Typography variant="heading" weight="medium" align="center" class="mt-14" >
        ¿Por qué usar la APP de Mennu?
      </Typography>
      <div class="flex flex-col lg:flex-row w-full lg:h-[440px] justify-center items-center gap-8">
        <!-- card 1 -->
        <div class="flex flex-col h-[440px] w-[286px] relative">
          <Image
            src={"/src/assets/img/home-ilustration-1.webp"}
            width={270}
            height={320}
            alt={""}
            class={"z-10"}
            />
          <!-- card text -->
          <div class="absolute bottom-0 right-0">
            <!-- 100px, 24px, 24px, 24px -->
            <div class="flex flex-col h-[360px] w-[270px] shadow-2xl justify-end rounded-[24px] bg-white p-6 rounded-tl-[100px] shadow-[#00183415] relative items-center">
              <div class="flex flex-row h-20 absolute bottom-0 px-6">
                <Typography variant="heading" weight="xSmall" align="center">
                  Precios bajos
                </Typography>
              </div>
            </div>
          </div>
        </div>
        <!-- card 2 -->
        <div class="flex flex-col h-[440px] w-[286px] relative">
          <Image
            src={"/src/assets/img/home-ilustration-2.webp"}
            width={270}
            height={320}
            alt={""}
            class={"z-10"}
            />
          <!-- card text -->
          <div class="absolute bottom-0 right-0">
            <!-- 100px, 24px, 24px, 24px -->
            <div class="flex flex-col h-[360px] w-[270px] shadow-2xl justify-end rounded-[24px] bg-white p-6 rounded-tl-[100px] shadow-[#00183415] relative items-center">
              <div class="flex flex-col h-20 absolute bottom-0 px-6">
                <Typography variant="heading" weight="xSmall" align="center">
                  Restaurantes, puestos de comida y cocina en casa
                </Typography>
              </div>
            </div>
          </div>
        </div>
         <!-- card 3 -->
         <div class="flex flex-col h-[440px] w-[286px] relative">
          <Image
            src={"/src/assets/img/home-ilustration-3.webp"}
            width={270}
            height={320}
            alt={""}
            class={"z-10"}
            />
          <!-- card text -->
          <div class="absolute bottom-0 right-0">
            <!-- 100px, 24px, 24px, 24px -->
            <div class="flex flex-col h-[360px] w-[270px] shadow-2xl rounded-[24px] bg-white p-6 rounded-tl-[100px] shadow-[#00183415] relative items-center">
              <div class="flex flex-col h-20 absolute bottom-0 px-6">
                <Typography variant="heading" weight="xSmall" align="center">
                  Negocios de comida cerca de ti
                </Typography>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- ilustration download app -->
  <section class="flex h-[725px] items-center">
    <div
      class="w-full lg:h-[504px] mx-auto max-w-[1280px] flex flex-row bg-primary rounded-tr-3xl rounded-br-[100px]"
    >
      <div class="w-full flex flex-col items-center justify-center">
        <div class="gap-4 flex flex-col">
          <Typography variant="heading" weight="large" color="white">
            Descarga Mennu
          </Typography>
          <Typography variant="paragraph" weight="medium" color="white">
            Consigue nuevos clientes y aumenta tus ventas
          </Typography>
          <!-- qr y btns -->
          <div class="flex flex-row items-center gap-4">
            <Image
              src="/src/assets/img/qr-prueba.png"
              alt="Descarga mennu negocios"
              width={160}
              height={160}
            />
            <ButtonsAppsStore />
          </div>
        </div>
      </div>
      <div class="w-full flex flex-col items-center justify-center">
        <Image
          src="/src/assets/img/Mobile-frame.webp"
          alt="Descarga mennu negocios"
          width={478}
          height={646}
          class={"mt-11"}
        />
      </div>
    </div>
  </section>
</Layout>
