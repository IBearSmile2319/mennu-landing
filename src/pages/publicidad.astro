---
import Banner from "@/components/Banner.astro";
import ContactFormNeg from "@/components/advertisers/ContactFormNeg";
import Typography from "@/components/ui/typography/Typography.astro";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";
import Layout from "@/layouts/Layout.astro";
import publicidadIlustrationMobile from "@/assets/img/publicidad-zocalo-mobile.png";
import { Image } from "astro:assets";
const RECAPTCHA_SITE_KEY = import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={t("app.publicidad.title")}
  description={t("app.publicidad.description")}
>
  <Banner
    title="Potencia tu negocio"
    description="Tu publicidad tendrá mayor alcance por personas y empresas que forman parte de tu público objetivo."
    textBtn="Comprar publicidad"
    url="#contact-form"
    imgs={[
      {
        alt: "Usando mennu seras un emprendedor exitoso",
        height: 370,
        width: 240,
        src: "/img/banner-advertisers-2.webp",
        widthMobile: 155,
        heightMobile: 239,
      },
      {
        alt: "una mujer cocinando y emprendiendo en mennu",
        height: 370,
        width: 240,
        src: "/img/banner-advertisers-1.webp",
        widthMobile: 155,
        heightMobile: 239,
      },
    ]}
  />
  <section class="flex lg:h-[452px] mb-8 lg:mb-0">
    <!-- container -->
    <div
      class="sm:w-full xs:w-[344px] mx-auto max-w-[1280px] lg:h-[451px] flex flex-col gap-5 from-[#C2FD94] to-[#EDFFDF ] bg-gradient-to-bl rounded-tl-3xl rounded-bl-[100px] p-4 lg:pt-16 lg:px-24"
    >
      <Typography variant="heading" weight="medium">
        ¿Por qué comprar publicidad en Mennu?
      </Typography>
      <!-- cards de info -->
      <div class="flex flex-row flex-wrap w-full gap-8 items-center">
        <!-- first card -->
        <div class="flex flex-col w-[329px] gap-4">
          <Image
            src="/img/person-circle-icon.webp"
            width={52}
            height={52}
            alt="icono de una persona en un circulo"
          />
          <div class="flex flex-col gap-1">
            <Typography variant="heading" weight="xSmall">
              Encuentra clientes potenciales
            </Typography>
            <Typography variant="paragraph" weight="medium">
              Tu publicidad tendrá mayor alcance por personas y empresas que
              forman parte de tu público objetivo.
            </Typography>
          </div>
        </div>
        <!-- second card -->
        <div class="flex flex-col w-[329px] gap-4">
          <Image
            src="/img/money-circle-icon.webp"
            width={52}
            height={52}
            alt="icono de una persona en un circulo"
          />
          <div class="flex flex-col gap-1">
            <Typography variant="heading" weight="xSmall">
              Económico
            </Typography>
            <Typography variant="paragraph" weight="medium">
              Tenemos planes de pago flexibles en inversión y duración.
            </Typography>
          </div>
        </div>
        <!-- third card -->
        <div class="flex flex-col w-[329px] gap-4">
          <Image
            src="/img/chart-circle-icon.webp"
            width={52}
            height={52}
            alt="icono de una persona en un circulo"
          />
          <div class="flex flex-col gap-1">
            <Typography variant="heading" weight="xSmall">
              Indicadores en línea
            </Typography>
            <Typography variant="paragraph" weight="medium">
              Visualización en línea del número de impresiones de tu publicidad
              y su CTR (Click Through Rate).
            </Typography>
          </div>
        </div>
      </div>
      <a
        href="#contact-form"
        class={`w-full lg:w-[343px] h-[56px] bg-primary flex flex-row items-center justify-center `}
      >
        <Typography variant="label" weight="large" color="white" align="center">
          Comprar publicidad
        </Typography>
      </a>
    </div>
  </section>
  <!-- contactanos section -->
  <section class="flex lg:h-[889px] mb-8 lg:mb-0 items-center">
    <!-- container -->
    <div
      class="w-full mx-auto max-w-[1280px] lg:h-[761px] flex flex-row flex-wrap item-center gap-8 justify-center"
    >
      <!-- left ilustration -->
      <div
        class="border-2 rounded-3xl rounded-bl-[100px] w-[328px]  lg:w-[386px] h-[761px] border-black flex flex-col items-center pt-4 gap-4"
      >
        <Typography variant="heading" weight="medium">
          Anuncio tipo zócalo
        </Typography>
        <Typography variant="paragraph" weight="medium">
          Medida pixeles: 320 ancho x 100 alto
        </Typography>
        <Image
          src={publicidadIlustrationMobile}
          width={290}
          height={100}
          alt="ilustración de un anuncio tipo zócalo"
        />
      </div>
      <!-- right form -->
      <div
        id="contact-form"
        class="w-[328px] lg:w-[588px] h-[761px] border-2 rounded-3xl rounded-br-[100px] border-accent flex flex-col gap-4 p-8 lg:px-20"
      >
        <ContactFormNeg client:load />
      </div>
    </div>
  </section>
</Layout>

<script
  is:inline
  type="text/javascript"
  src={`https://www.google.com/recaptcha/api.js?render=${RECAPTCHA_SITE_KEY}`}
></script>
